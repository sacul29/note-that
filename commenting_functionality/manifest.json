{
  "name": "Note That",
  "description": "Allows users to highlight and add comments to webpages",
  "author":"Lucas F. Chaufournier",
  "version": "1.0",
  "permissions": [
    "tabs", "http://*/*", "https://*/*","activeTab","desktopCapture"
  ],
 "content_scripts": [
    {
      "matches": ["http://*/*","https://*/*"],
      "css": ["core.css"],
      "js": ["core.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "browser_action": {
      "default_title": "My first extension.",
      "default_icon": "images/note.png",
      "default_popup": "main.html"
  },
  "manifest_version": 2
}
